{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "alignment": "right",
        "segments": [
            {
                "background": "#3c45c7",
                "foreground": "#ffffff",
                "leading_diamond": "<transparent,background>\ue0b0</>",
                "properties": {
                    "folder_icon": "\uf115 ",
                    "folder_separator_icon": " / ",
                    "style": "agnoster_short",
                    "max_depth": 3
                },
                "style": "diamond",
                "template": " {{ .Path }} ",
                "trailing_diamond": "\ue0b0",
                "type": "path"
              },
              {
                "type": "git",
                "background": "#7426a8",
                "foreground": "#ffffff",
                "powerline_symbol": "\ue0b0",
                "properties": {
                  "branch_icon": "\ue725 ",
                  "fetch_status": true,
                  "fetch_upstream_icon": true,
                  "status_formats": {
                    "Untracked": "+%d"
                  }
                },
                "style": "powerline",
                "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<#ea6e6e> \uf044 {{ .Working.String }}</>{{ end }}{{ if .Staging.Changed }}<#6aa84f> \uf046 {{ .Staging.String }}</>{{ end }} "
              }
        ],
        "type": "prompt"
      },
      {
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "foreground": "#ffffff",
            "properties": {
              "always_enabled": true
            },
            "style": "plain",
            "template": "\u276f",
            "type": "status"
          }
        ],
        "type": "prompt"
      }
    ],
    "final_space": true,
    "version": 2
}